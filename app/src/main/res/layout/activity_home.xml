<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.activities.HomeActivity">

    <LinearLayout
        android:id="@+id/ll_titleHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="Home"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/_10sdp"
            android:src="@drawable/menu_icon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_titleHome">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/schedule_icon_big"
            android:drawableTint="@color/isamed_dark_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:fontFamily="@font/helvetica"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Schedule"
            android:textColor="@color/isamed_dark_blue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/isamed_dark_blue"
            android:layout_marginTop="@dimen/_5sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_schedule">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/search_icon_big"
            android:drawableTint="@color/isamed_dark_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:fontFamily="@font/helvetica"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Search For Patient"
            android:textColor="@color/isamed_dark_blue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/isamed_dark_blue"
            android:paddingHorizontal="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_prescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_search">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/helvetica"
            android:drawableLeft="@drawable/prescription_icon_big"
            android:drawableTint="@color/isamed_dark_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Prescription"
            android:textColor="@color/isamed_dark_blue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/isamed_dark_blue"
            android:paddingHorizontal="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_testResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_prescription">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/test_result_icon_big"
            android:drawableTint="@color/isamed_dark_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Test Results"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/isamed_dark_blue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/isamed_dark_blue"
            android:paddingHorizontal="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_labOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_testResults">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/lab_ord_icon_big"
            android:drawableTint="@color/isamed_dark_blue"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:fontFamily="@font/helvetica"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Lab Order"
            android:textColor="@color/isamed_dark_blue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/isamed_dark_blue"
            android:paddingHorizontal="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sonograms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_labOrder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/sonograms_icon_big"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/isamed_dark_blue"
            android:fontFamily="@font/helvetica"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Sonograms"
            android:textColor="@color/isamed_dark_blue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/isamed_dark_blue"
            android:paddingHorizontal="@dimen/_10sdp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>